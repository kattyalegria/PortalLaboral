  </head>

  <body>
    <div class="container">
      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#"><%= link_to "Inicio","users", class:"nav-link" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><%= link_to "Postulaciones","postulacion", class:"nav-link" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><%= link_to "Oferta Laboral","oferta_laboral", class:"nav-link" %></a>
        </li>              
      </ul>
      
      <%= yield %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    </div>
  </body>
</html>
